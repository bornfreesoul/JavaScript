//Global and Local Variables//

//Local Variable Example//
function myLocal1()
{
var L = ("<br />" + "Its 'Local Variable'.");
document.write("<br />", "Local Variable called." + L);
}
myLocal1();

//Global Variable Example//
var myGlobal1 = 0.007;
function callGlobal1()
{
document.write("<br/>" + "I called the 'Global Variable' now.", myGlobal1);
}
callGlobal1();

